---
import type { TechnologiesProps } from "@types";
import { Icon } from "astro-icon/components";
import Section from "./Section.astro";

interface Props {
  techs: TechnologiesProps;
}

const { techs } = Astro.props;
---

<Section text="Tecnologias" href="techs" icon="dev">
  <div class="flex flex-col lg:grid lg:grid-cols-2 gap-10">
    <div class="p-5 relative z-[1] bg-[#1c232d]/85 bg-difu before:content-[''] before:rounded-2xl before:absolute before:z-[-1] before:opacity-[5%] before:inset-0 before:bg-[url(/raja.png)] before:bg-repeat before:bg-[length:128px] rounded-lg shadow-md flex flex-col items-center w-full max-w-md mx-auto lg:w-auto">
      <h3 class="text-2xl text-primary font-serif md:font-semibold mb-10 text-center">Habilidades</h3>
      <div class="flex flex-wrap gap-4 justify-center">
        {techs.skills.map(skill => (
          <div class="flex flex-col items-center gap-2 w-20 duration-300 transition-transform lg:hover:scale-[1.1] group">
            <Icon name={`techs/${skill.icon}`} size={36} class="text-primary" />
            <span class="text-white text-sm mb-2">{skill.name}</span>
          </div>
        ))}
      </div>
    </div>
    <div class="p-5 relative z-[1] bg-[#1c232d]/85 bg-difu before:content-[''] before:rounded-2xl before:absolute before:z-[-1] before:opacity-[5%] before:inset-0 before:bg-[url(/raja.png)] before:bg-repeat before:bg-[length:128px] rounded-lg shadow-md flex flex-col items-center w-full max-w-md mx-auto lg:w-auto">
      <h3 class="text-2xl text-primary font-serif md:font-semibold mb-10 text-center">Herramientas</h3>
      <div class="flex flex-wrap gap-4 justify-center">
        {techs.tools.map(tool => (
          <div class="flex flex-col items-center gap-2 w-20 duration-300 transition-transform lg:hover:scale-[1.1] group">
            <Icon name={`techs/${tool.icon}`} size={36} class="text-primary" />
            <span class="text-white text-sm mb-2">{tool.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</Section>
